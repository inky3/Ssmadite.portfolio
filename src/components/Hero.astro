---
interface Props {
  title?: string;
  subtitle?: string;
  bgImage?: string;     // external URL or /public path
  overlay?: number;     // 0..1
  height?: string;      // e.g., "92vh"
}
const {
  title = "Name",
  subtitle = "3D • Motion • Graphic • Animation",
  bgImage = "https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?q=80&w=1920&auto=format&fit=crop",
  overlay = 0.45,
  height = "92vh",
} = Astro.props as Props;
---

<section style={`position:relative;min-height:${height};isolation:isolate`}>
  <!-- Background image -->
  <img src={bgImage} alt="" loading="eager" decoding="async"
       style="position:absolute;inset:0;width:100%;height:100%;object-fit:cover;z-index:-2" />

  <!-- Overlay: gradient + tint -->
  <div style={`position:absolute;inset:0;z-index:-1;
               background:
                 radial-gradient(1200px 600px at 20% 20%, rgba(0,0,0,.35), transparent 60%),
                 linear-gradient(to top, rgba(0,0,0,${overlay}), rgba(0,0,0,${overlay}))`} />

  <div class="container" style="padding-top:120px;padding-bottom:72px">
    <h1 class="h1" style="color:#fff; text-shadow:0 6px 30px rgba(0,0,0,.35)">{title}</h1>
    <p class="lead" style="color:#d9e1e8">{subtitle}</p>

    <div style="display:flex;gap:12px;flex-wrap:wrap;margin-top:16px">
      <a class="btn-dark" href="#contact" style="backdrop-filter:saturate(130%) blur(2px)">Contact</a>
      <a class="btn-dark btn-bg-soft" href="/cv.pdf" target="_blank" rel="noopener">Download CV</a>
    </div>
  </div>
</section>
